SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE InsertLookup
(
	@Id int OUTPUT,
	@ParentDataKey nvarchar(250),
	@DataKey nvarchar(250),
	@DisplayText nvarchar(250),
	@DataValue nvarchar(250),
	@DataOrder int,
	@IsActive bit,
	@AlterDisplayText nvarchar(250),
	@AlterDisplayText1 nvarchar(250)
)
AS
    INSERT INTO [dbo].[Lookup] 
	(
	[ParentDataKey],
	[DataKey],
	[DisplayText],
	[DataValue],
	[DataOrder],
	[IsActive],
	[AlterDisplayText],
	[AlterDisplayText1]
    ) 
	VALUES 
	(
	@ParentDataKey,
	@DataKey,
	@DisplayText,
	@DataValue,
	@DataOrder,
	@IsActive,
	@AlterDisplayText,
	@AlterDisplayText1
    )
	DECLARE @Err int
	DECLARE @Result int

	SET @Result = @@ROWCOUNT
	SET @Err = @@ERROR 
	If @Err <> 0 
	BEGIN
		SET @Id = -1
		RETURN @Err
	END
	ELSE
	BEGIN
		If @Result = 1 
		BEGIN
			-- Everything is OK
			SET @Id = @@IDENTITY
		END
		ELSE
		BEGIN
			SET @Id = -1
			RETURN 0
		END
	END

	RETURN @Id
GO

