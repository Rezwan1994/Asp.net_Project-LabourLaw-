@model LLP.Web.BookChapter


@{
  
    Layout = null;
}



<style>
    /*Here We will add some css for style our treeview*/
    .collapse {
        width: 15px;
        background-image: url('/Content/images/treeview.png');
        background-repeat: no-repeat;
        background-position: -36px -17px;
        display: inline-block;
        cursor: pointer;
    }

    .expand {
        width: 15px;
        background-image: url('/Content/images/treeview.png');
        background-repeat: no-repeat;
        background-position: -50px -17px;
        display: inline-block;
        cursor: pointer;
    }

    .treeview ul {
        font: 14px Arial, Sans-Serif;
        margin: 0px;
        padding-left: 20px;
        list-style: none;
    }

    .treeview > li > a {
        font-weight: bold;
    }

    .treeview li {
    }

        .treeview li a {
            padding: 4px;
            font-size: 12px;
            display: inline-block;
            text-decoration: none;
            width: auto;
        }

    .Chapter_List {
        border-right: 1px solid #808080;
    }
</style>

<!--/.header-->
<div class="Chapter">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="Chapter_List">
                    <h2>Chapters</h2>
                    <div style="padding:10px; background-color:#FAFAFA">
                        <div class="treeview">
                            @foreach (var a in Model.ChapterList)
                            {
                                <h4>@a.Name</h4>

                                if (Model.ContentList != null && Model.ContentList.Count() > 0)
                                {

                                    <ul>
                                        @TreeView.GetTreeView(Model.ContentList, Model.ContentList.FirstOrDefault().ParentId, Convert.ToInt32(a.ChapterNo))

                                    </ul>
                                }

                            }
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-9">
                <div class="Chapter_Content">
                    <div>
                        <h1>Content</h1>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/scripts/jquery.min.js"></script>
<script>
        $(document).ready(function () {
            $(".treeview li>ul").css('display', 'none'); // Hide all 2-level ul
            $(".collapsible").click(function (e) {
                e.preventDefault();
                $(this).toggleClass("collapse expand");
                $(this).closest('li').children('ul').slideToggle();
            });
        });
</script> 

