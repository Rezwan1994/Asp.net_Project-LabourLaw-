CREATE PROCEDURE InsertChapterContent
(
	@Id int OUTPUT,
	@TitleNo nvarchar(50),
	@Title nvarchar(500),
	@CpContent nvarchar(max),
	@ChapterId int,
	@ParentId int
)
AS
    INSERT INTO [dbo].[ChapterContent] 
	(
	[TitleNo],
	[Title],
	[CpContent],
	[ChapterId],
	[ParentId]
    ) 
	VALUES 
	(
	@TitleNo,
	@Title,
	@CpContent,
	@ChapterId,
	@ParentId
    )
	DECLARE @Err int
	DECLARE @Result int

	SET @Result = @@ROWCOUNT
	SET @Err = @@ERROR 
	If @Err <> 0 
	BEGIN
		SET @Id = -1
		RETURN @Err
	END
	ELSE
	BEGIN
		If @Result = 1 
		BEGIN
			-- Everything is OK
			SET @Id = @@IDENTITY
		END
		ELSE
		BEGIN
			SET @Id = -1
			RETURN 0
		END
	END

	RETURN @Id
GO

