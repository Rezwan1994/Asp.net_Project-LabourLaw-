<script type="text/javascript">

    var ctrId;
    var chatHub;
    var SenderRealAdminID = "";
    var SenderRealAdminName = "";
    $(function () {
        var date = moment(); //Get the current date

        $('#DateTime').val(date.format("YYYY-MM-DD"));

        setScreen();
        // Declare a proxy to reference the hub.
        chatHub = $.connection.ChatHub;

        registerClientMethods(chatHub);

        // Start Hub
        $.connection.hub.start().done(function () {

           // alert(chatHub);

        });

    });

    var GetChatList = function (SenderId, ReceiverId,SenderName) {
        if (SenderId != null && ReceiverId != null)
        {
            $.ajax({
                type: 'GET',
                url: '/ChatHub/GetAllBySenderIdAndReceiverId',
                dataType: "json",
                data: { SenderId: SenderId, ReceiverId: ReceiverId },
                success: function (data) {
                    //console.log(data);
                    $("#divMessage").empty();
                    var code = "";
                    var ctrId = 'private_' + SenderId;

                    for (var key in data) {
                        var obj = data[key];
                        for (var prop in obj) {
                            //alert(prop + " = " + obj[prop]["SenderId"]);
                            var fromUserName = obj[prop]["Name"];
                            var message = obj[prop]["Message"];
                            // console.log(obj[prop]);
                            //console.log(message + fromUserName + " " + ctrId);
                            if (SenderName == "")
                            {
                                 if (SenderId == obj[prop]["SenderId"]) {
                                code += '<div class="message" id="AdminMsg"><a href="" class="AdminUserName">' + '@Model.UserName' + '</a>: ' + message + '</div>';
                                }
                                else {
                                code += '<div class="message"><span class="ClientUserName">' + fromUserName + '</span>: ' + message + '</div>';
                                }
                            }
                            else {
                                if (SenderId == obj[prop]["SenderId"]) {
                                    code += '<div class="message" id="AdminMsg"><a href="" class="AdminUserName">' + SenderRealAdminName + '</a>: ' + message + '</div>';
                                }
                                else {
                                code += '<div class="message"><span class="ClientUserName">' + fromUserName + '</span>: ' + message + '</div>';
                                }
                            }




                        }
                    }
                    //console.log(code + " lol ");
                    $("#divChatWindow").empty();
                    $('#' + ctrId).find('#divMessage').append(code);
                    $('#divChatWindow').append(code);




                },
                error: function (xhr, status, error) {
                    console.log("cholse na");
                }
            });

        }
        else {
            $("#divChatWindow").empty();
            $('#ClientName').text();
        }
    }

    var Userid = "";
    var adminId = "";
    $(document).ready(function () {

        setInterval(function () {

            $("#divChatWindow").scrollTop($("#divChatWindow div").height() * $("#divChatWindow div").length);

        },10000);

    });



    $(document).ready(function () {
        setInterval(function () {

                    var date = $('#DateTime').val();
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetAllUserFromUserChat", "Admin")',
                        dataType: "json",
                        data: { Date: date },
                        success: function (data) {

                            $("#divusers").empty();
                            var code = "";
                            for (var sterm = 0; sterm < data.length; sterm++) {

                                var name = data[sterm].Name;
                                var id = data[sterm].ChatUserId;
                                empty = $('<a id="' + null + '" class="user" >' + null + '<a>');
                                code = $('<a id="' + id + '" class="user" >' + name + '<a>');
                                $("#divusers").append(code);

                                // console.log($('#clientID').val() + "Before");
                                $(code).click(function () {
                                    var chatHub = $.connection.ChatHub;
                                    $("#divMessage").empty();
                                    $("#divChatWindow").empty();
                                    Userid = $(this).attr('id');
                                    var Username = $(this).text();
                                    //var Username = "Mijan";
                                    adminId = '@Model.UserId';
                                   // console.log(adminId + "Old");
                                    var adminName = '@Model.UserName';
                                    $('#clientID').val(Userid);
                                    $('#adminID').val(adminId);
                                    $('#ClientName').text("               "+Username);
                                   // UpdateUserChat(adminId, adminName, Userid);

                                    //console.log($('#clientID').val() + "BLOck");
                                    OpenPrivateChatWindow(chatHub, Userid, adminId, Username);

                                    GetChatList(adminId, Userid,"");
                                    GetSenderAdminIdByClientId(Userid);
                                    if (SenderRealAdminID == "")
                                    {
                                        $("#ConfirmLabel").html("You have a message request, Sent a message to accept");
                                        $('#ConfirmLabel').show();
                                    }

                                });


                            }

                            //console.log($('#clientID').val() + " hi ");
                            //    if ($.trim($('#clientID').val()) == '') {
                            //        console.log("lol");
                            //    }
                            //    if (!$.trim($('#clientID').val())) {
                            //        console.log("lol1");
                            //    }
                            //    else {
                            //        console.log("cholse");
                            //        GetChatList(adminId, Userid);
                            //    }
                            //document.getElementById('today').value = moment().format('YYYY-MM-DD');
                            //console.log($('#DateTime').val());

                            },
                        error: function (xhr, status, error) {
                            console.log("Error");
                                }
                         });



        }, 1000); //1 seconds
    });

    var globaluserId;
    var globalid;
    $(document).ready(function() {


        setInterval(function () {
            GetSenderAdminIdByClientId(Userid);
            if ($.trim($('#clientID').val()) == '' && SenderRealAdminID == "")
            {
               // console.log("Hudai Calling");
            }
            else if (SenderRealAdminID == $("#adminID").val()){
                GetChatList($("#adminID").val(), $("#clientID").val(),"");
                //console.log("Real - Calling");
            }
            else if (SenderRealAdminID != $("#adminID").val() && SenderRealAdminName != ""){
                GetChatList(SenderRealAdminID, $("#clientID").val(), SenderRealAdminName);
                //console.log(SenderRealAdminName + "Loop");
            }

        }, 2000);

        //New Code
        $("#btnSendMsg").click(function () {

            var SenderAdminID="";

            $.ajax({
                type: 'GET',
                url: '/ChatHub/GetSenderIdByRecieverId',
                dataType: "json",
                data: { ClientId: globalid },
                success: function (data) {

                    //if (data.SenderId != "") {
                        SenderAdminID = data.SenderId;
                        //console.log(data.SenderId + "from Ajax data");
                        //console.log(SenderAdminID + "from Ajax");

                    //}

                    //console.log(SenderAdminId + "Sender Admin");

                },
                error: function (xhr, status, error) {
                    alert("Error fetching AdminId");
                }

            });
            setTimeout(function ()
            {
               // console.log(SenderAdminID + globaluserId);
                if (SenderAdminID == globaluserId)
                {
                    $textBox = ("#txtMessage");
                    var msg = $($textBox).val();
                    if (msg.length > 0) {

                        chatHub.server.sendPrivateMessageForAdmin(globaluserId, msg, globalid);
                        $($textBox).val('');
                        $('#btnSendMsg').prop("disabled", false);
                    }
                }
                    else if(SenderAdminID == ""){
                        $textBox = ("#txtMessage");
                        var msg = $($textBox).val();
                        if (msg.length > 0) {

                            chatHub.server.sendPrivateMessageForAdmin(globaluserId, msg, globalid);
                            $($textBox).val('');
                            $('#btnSendMsg').prop("disabled", false);
                        }
                    }

                    else
                    {
                        $textBox = ("#txtMessage");
                        $($textBox).val('');
                        $('#btnSendMsg').prop("disabled", true);
                        giveMessageAlert("You are not Authorised to Chat");

                    }


            }, 1000);

        });
        // Text Box event
        $("#txtMessage").keypress(function (e) {
            if (e.which == 13) {
                $("#btnSendMsg").click();
            }
        });


        $('#imgDelete').click(function () {
            $("#adminID").val("");
            $('#clientID').val("");
            $("#divChatWindow").empty();
            $('#ClientName').text("");
            //console.log($("#adminID").val() + "---------" + $('#clientID').val());
        });


        var giveMessageAlert = function (message)
        {
            var disc = $('<div class="disconnect">"' + '@Model.UserName' + message + '"  .</div>');

                $(disc).hide();
                $('#divusers').prepend(disc);
                $(disc).fadeIn(200);
                $(disc).fadeOut("slow");
        }

    });

    var GetSenderAdminIdByClientId = function (clientId) {




        $.ajax({
            type: 'GET',
            url: '/ChatHub/GetSenderIdByRecieverId',
            dataType: "json",
            data: { ClientId: globalid },
            success: function (data) {

                if (data.SenderId != "") {
                    SenderRealAdminName = data.Name;
                    SenderRealAdminID = data.SenderId;
                   // console.log(SenderRealAdminName);
                }

                //console.log(SenderAdminId + "Sender Admin");

            },
            error: function (xhr, status, error) {
                alert("Error fetching AdminId");
            }

        });

    }


    function setScreen() {

            $("#divChat").show();

    }
    function registerClientMethods(chatHub) {

        chatHub.client.giveMessageAlert = function (message)
        {
            var disc = $('<div class="disconnect">"' + '@Model.UserName' + message + '"  .</div>');

                $(disc).hide();
                $('#divusers').prepend(disc);
                $(disc).fadeIn(200).delay(2000).fadeOut(200);
        }

        chatHub.client.sendPrivateMessage = function (windowId, fromUserName, message) {

            var ctrId = 'private_' + windowId;
           // console.log(ctrId + "");

            //if ($('#' + ctrId).length == 0) {

            //    createPrivateChatWindow(chatHub, windowId, ctrId, fromUserName);

            //}

            $('#' + ctrId).find('#divMessage').append('<div class="message"><span class="userName">' + fromUserName + '</span>: ' + message + '</div>');
           // console.log(message + fromUserName);
            // set scrollbar
            var height = $('#' + ctrId).find('#divMessage')[0].scrollHeight;
            $('#' + ctrId).find('#divMessage').scrollTop(height);

        }

    }

    function AddUser(chatHub, id, name) {

        var userId = $('#hdId').val();

        var code = "";

        if (userId == id) {

            code = $('<div class="loginUser">' + name + "</div>");

        }
        else {

            code = $('<a id="' + id + '" class="user" >' + name + '<a>');

            //$(code).dblclick(function () {

            //    var id = $(this).attr('id');
            //    console.log("Id is--"+id);
            //    if (userId != id)
            //        OpenPrivateChatWindow(chatHub, id, name);

            //});
        }

        $("#divusers").append(code);

    }

    function AddMessage(userName, message) {
        $('#divChatWindow').append('<div class="message"><span class="userName">' + userName + '</span>: ' + message + '</div>');

        var height = $('#divChatWindow')[0].scrollHeight;
        $('#divChatWindow').scrollTop(height);
    }
    function OpenPrivateChatWindow(chatHub, id, adminId, userName) {

       ctrId = 'private_' + adminId;

            if ($('#' + ctrId).length > 0) return;

            createPrivateChatWindow(chatHub, adminId, ctrId, userName, id);

    }

    function createPrivateChatWindow(chatHub, userId, ctrId, userName, id) {
        globalid = id;
        globaluserId = userId;
        chatHub = chatHub;
            var div = '<div id="' + ctrId + '" class="ui-widget-content draggable" rel="0">' +
                       '<div class="header">' +
                          '<div  style="float:right;">' +
                              '<img id="imgDelete"  style="cursor:pointer;" src="/Images/delete.png"/>' +
                           '</div>' +

                           '<span class="selText" rel="0">' + userName + '</span>' +
                       '</div>' +
                       '<div id="divMessage" class="messageArea">' +
                        '<h6 id="ConfirmLabel"></h6>'+
                       '</div>' +
                       '<div class="buttonBar">' +
                          '<input id="txtPrivateMessage" class="msgText" type="text"   />' +
                          '<input id="btnSendMessage" class="submitButton button" type="button" value="Send"   />' +
                       '</div>' +
                    '</div>';

            var $div = $(div);

            // DELETE BUTTON IMAGE


            // Send Button event
            $div.find("#btnSendMessage").click(function () {


                $textBox = $div.find("#txtPrivateMessage");
                var msg = $textBox.val();
                if (msg.length > 0) {

                    chatHub.server.sendPrivateMessageForAdmin(userId, msg, id);
                    $textBox.val('');
                }
            });

            // Text Box event
            $div.find("#txtPrivateMessage").keypress(function (e) {
                if (e.which == 13) {
                    $div.find("#btnSendMessage").click();
                }
            });






          //  AddDivToContainer($div);

    }

        function AddDivToContainer($div) {
            $('#divContainer').prepend($div);

            $div.draggable({

                handle: ".header",
                stop: function () {

                }
            });

            ////$div.resizable({
            ////    stop: function () {

            ////    }
            ////});

        }

</script>



      <div id="divContainer">
          @Html.HiddenFor(m => m.Id)

          <div id="divChat" class="chatRoom">
              <div class="title">
            Messenger [<span id='spanUser'>@Model.UserName</span>]
                  <input type="date" name="bday" id="DateTime"  min="2000-01-02">
            </div>

              <div class="header" style="width:77%">
                  <div style="float:right;">
                         <img id="imgDelete" style="cursor:pointer;" src="/Images/delete.png" />
                  </div>
                         <h4><span class="selText" rel="0" id="ClientName" style="color:black;"> </span></h4>
              </div>


              <div class="content">
                  <div id="divChatWindow" class="chatWindow">
                  </div>
                  <div id="divusers" class="users">
                  </div>
              </div>
              <div class="messageBar">
                  <input class="textbox" type="text" id="txtMessage" />
                  <input id="btnSendMsg" type="button" value="Send" class="submitButton" />
              </div>
          </div>
          <input id="clientID" type="hidden" />
          <input id="adminID" type="hidden" />
          <input id="hdId" type="hidden" />
          <input id="hdUserName" type="hidden" />
      </div>
