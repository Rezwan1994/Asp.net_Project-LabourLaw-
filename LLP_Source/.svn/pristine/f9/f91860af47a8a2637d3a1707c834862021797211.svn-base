CREATE PROCEDURE InsertEmailTemplate
(
	@Id int OUTPUT,
	@CompanyId uniqueidentifier,
	@TemplateKey nvarchar(250),
	@Name nvarchar(250),
	@Description nvarchar(250),
	@ToEmail nvarchar(250),
	@CcEmail nvarchar(250),
	@BccEmail nvarchar(250),
	@FromEmail nvarchar(250),
	@FromName nvarchar(250),
	@ReplyEmail nvarchar(250),
	@Subject nvarchar(250),
	@BodyContent nvarchar(max),
	@BodyFile nvarchar(250),
	@IsActive bit,
	@LastUpdatedBy nvarchar(250),
	@LastUpdatedDate datetime
)
AS
    INSERT INTO [dbo].[EmailTemplate] 
	(
	[CompanyId],
	[TemplateKey],
	[Name],
	[Description],
	[ToEmail],
	[CcEmail],
	[BccEmail],
	[FromEmail],
	[FromName],
	[ReplyEmail],
	[Subject],
	[BodyContent],
	[BodyFile],
	[IsActive],
	[LastUpdatedBy],
	[LastUpdatedDate]
    ) 
	VALUES 
	(
	@CompanyId,
	@TemplateKey,
	@Name,
	@Description,
	@ToEmail,
	@CcEmail,
	@BccEmail,
	@FromEmail,
	@FromName,
	@ReplyEmail,
	@Subject,
	@BodyContent,
	@BodyFile,
	@IsActive,
	@LastUpdatedBy,
	@LastUpdatedDate
    )
	DECLARE @Err int
	DECLARE @Result int

	SET @Result = @@ROWCOUNT
	SET @Err = @@ERROR 
	If @Err <> 0 
	BEGIN
		SET @Id = -1
		RETURN @Err
	END
	ELSE
	BEGIN
		If @Result = 1 
		BEGIN
			-- Everything is OK
			SET @Id = @@IDENTITY
		END
		ELSE
		BEGIN
			SET @Id = -1
			RETURN 0
		END
	END

	RETURN @Id
GO

