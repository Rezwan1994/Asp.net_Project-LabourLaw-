            // Send Button event
            $div.find("#btnSendMessage").click(function () {

                $textBox = $div.find("#txtPrivateMessage");
                var msg = $textBox.val();
                if (msg.length > 0) {
                    $("#ConfirmLabel").hide();
                    //console.log($('#SenderAdminId').val()+"After Sent ");
                    chatHub.server.sendPrivateMessage(userId, msg, $('#SenderAdminId').val());
                   // ("#ConfirmLabel").html("Message request has been sent Wait for the Confirmation");
                     @*var userId = '@Session["UserId"]';
                     var employeeId = '@Session["EmployeeId"]';*@




                    //$.ajax({
                    //    type: 'POST',
                    //    url: '/ChatHub/StoreInfoToChatMessage',
                    //        dataType: "json",
                    //        data: { message: $("#txtPrivateMessage").val(), userId: userId},
                    //        success: function (data) {
                    //            if (data.result == false) {
                    //                $("#ConfirmLabel").html("Message request has been sent Wait for the Confirmation");
                    //            }
                    //           // isExist
                    //            console.log(data);

                    //        },
                    //            error: function (xhr, status, error) {
                    //                alert("Error");
                    //            }

                    //});

                    @*var senderId = $(this).attr('id');
                    console.log(senderId);
                     $.ajax({
                        type: 'POST',
                            url: '@Url.Action("GetReadDateBySenderId", "ChatHub")',
                            dataType: "json",
                            data: { senderId: senderId },
                            success: function (data) {

                                console.log(data);

                            },
                                error: function (xhr, status, error) {
                                    alert("Error");
                                }

                    });
                     if ('@Session["ReadDate"]' ==null)
                     {
                         $("#ConfirmLabel").html("Message request has been sent Wait for the Confirmation");
                     }*@




                    $textBox.val('');
                }
            });

            // Text Box event
            $div.find("#txtPrivateMessage").keypress(function (e) {
                if (e.which == 13) {
                    if (readDate == true)
                    {
                        $div.find("#btnSendMessage").click();
                    }

                }
            });

            AddDivToContainer($div);

        }

        function AddDivToContainer($div) {
            $('#divContainer').prepend($div);

            $div.draggable({

                handle: ".header",
                stop: function () {

                }
            });

            ////$div.resizable({
            ////    stop: function () {

            ////    }
            ////});

        }



        $(document).ready(function () {

            setInterval(function () {

                $("#divMessage").scrollTop($("#divMessage div").height() * $("#divMessage div").length * $("#divMessage div").length);

            }, 10000);

        });



    </script>



