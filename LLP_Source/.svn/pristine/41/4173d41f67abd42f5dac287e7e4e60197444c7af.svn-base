@using Localize = LLP.Web.Ui.Helper.LanguageHelper
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Labor Law Partner</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/FontAwesome/css/font-awesome.css" rel="stylesheet" />
    <style>
        #font {
            padding-right: 10px;
        }
        .main_wrapper {
            width:100%;
            float:left;
            position:relative;
        }
        .top_menu_bar {
            width:100%;
            position:fixed;
            top:0px;
        }
        .render_area {
            position: fixed;
            top: 51px;
            width: 100%;
          
        }
    </style>
    <script src="~/Content/scripts/jquery-1.8.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. --> 




    <script src="~/Content/scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="main_wrapper">
        <div class="navbar navbar-default navbar-static-top top_menu_bar">
            <div class="container" id="menu">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse navHeaderCollapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li> <a href="/Home/Index"><i class="fa fa-home" id="font"></i>@Localize.T("Home")</a></li>
                        <li> <a href=""><i class="fa fa-rss" id="font"></i>@Localize.T("Blog")</a></li>
                        <li> <a href="/registration"><i class="fa fa-user-plus" id="font"></i>@Localize.T("Sign up")</a></li>
                        <li> <a href="/login"><i class="fa fa-sign-in" id="font"></i>@Localize.T("Login")</a></li>
                        @if (Request.Cookies["__Lng"] != null)
                        {
                            if (Request.Cookies["__Lng"].Value != "En-US")
                            {
                                <li class="career-advice tld">
                                    @Html.ActionLink("English", "English", "Home", new { area = "" }, new { @class = "gtmHeaderNav header-block-link", title = "English" })
                                </li>
                            }
                            else if (Request.Cookies["__Lng"].Value != "Bn-BGD")
                            {
                                <li class="career-advice tld">
                                    @Html.ActionLink("বাংলা", "Bangla", "Home", new { area = "" }, new { @class = "gtmHeaderNav header-block-link", title = "English", @hidden = "hidden" })
                                </li>
                            }
                        }
                        else
                        {
                            <li class="career-advice tld">
                                @Html.ActionLink("বাংলা", "Bangla", "Home", new { area = "" }, new { @class = "gtmHeaderNav header-block-link", title = "English", @hidden = "hidden" })
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
        <div class="render_area">
            @RenderBody()
        </div>
    </div>


</body>
</html>
