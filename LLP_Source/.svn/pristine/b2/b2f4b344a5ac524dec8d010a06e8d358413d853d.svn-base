    var GetChatList = function (SenderId, ReceiverId) {
        
            $.ajax({
                type: 'GET',
                url: '/ChatHub/GetAllBySenderIdAndReceiverId',
                dataType: "json",
                data: { SenderId: SenderId, ReceiverId: ReceiverId },
                success: function (data) {
                    // console.log(data);
                    $("#divMessage").empty();
                    var code = "";
                    var ctrId = 'private_' + SenderId;

                    for (var key in data) {
                        var obj = data[key];
                        for (var prop in obj) {
                            //alert(prop + " = " + obj[prop]["SenderId"]);
                            var fromUserName = obj[prop]["SenderId"];
                            var message = obj[prop]["Message"];

                            //console.log(message + fromUserName + " " + ctrId);
                            code += '<div class="message"><span class="userName">' + fromUserName + '</span>: ' + message + '</div>';
                            //console.log(code);


                        }
                    }
                    //console.log(code + " lol ");
                    $('#' + ctrId).find('#divMessage').append(code);



                },
                error: function (xhr, status, error) {
                    console.log("cholse na");
                }
            });

 
    }

